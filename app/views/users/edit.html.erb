<% provide :title, "Edit user #{@user.name}" %>
<h1><%= @user.name %></h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for @user do |f| %>
			<%= render 'common_fields', f: f %>
			<%= f.submit 'Save changes', class: "btn btn-large btn-primary" %>
		<% end %>
		<%= gravatar_for(@user) %> <%= link_to 'change', 'http://gravatar.com/emails' %>
	</div>
</div>